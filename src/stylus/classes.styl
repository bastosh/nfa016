/* Style */
.italic
  font-style italic
.underline
  text-decoration underline
.line-through
  text-decoration line-through
.capitalize
  text-transform capitalize
.uppercase
  text-transform uppercase
.small-caps
  font-variant: small-caps

/* Width */
.small-text-container
  max-width 20em
.text-container
  max-width 30em
.large-text-container
  max-width 40em

/* Paragraph */
.indent
  text-indent 1em
  margin-top 0
  margin-bottom 0

/* Text-align */
.left
  text-align left
.right
  text-align right
.center, text-center, .is-centered, .has-text-centered
  text-align center
.justify, .is-justified
  text-align justify
  hyphens auto

.text-muted
  color grey-70

