//***********************

.card
  background-color: white
  border-radius: 6px
  box-shadow: 0 1px 4px rgba(0, 0, 0, .2)
  margin-bottom: 2rem
  max-width 100%
  position relative
  .card-image
    display: block
    position: relative
  .card-title
    font-size: 2.5rem
    padding: 1rem 2rem 0
  .card-content
    padding: 0 2rem 1rem

