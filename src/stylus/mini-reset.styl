/* Mini-reset */
*,
*::before,
*::after
  box-sizing border-box

body, figure
  margin 0

h1, h2, h3, h4, h5, h6
  margin-top 0
  margin-bottom .5rem

p, ol, ul, dl, pre
  margin-top 0
  margin-bottom 1rem

ol ol
ul ul
ol ul
ul ol
  margin-bottom 0

abbr[title]
  cursor help

address
  margin-bottom 1rem
  font-style normal
  line-height inherit

dt
  font-weight 700

dd
  margin-bottom .5rem
  margin-left 0

q
  quotes "\00ab\00a0" "\00a0\00bb" "\201C" "\201D"

sub,
sup
  position relative
  font-size 75%
  line-height 0
  vertical-align baseline

sub
  bottom -.25em

sup
  top -.5em

pre,
code,
kbd,
samp
  font-family monospace, monospace
  font-size .9em
