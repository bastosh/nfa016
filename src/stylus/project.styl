///////////////////////// PROJECT STYLES ///////////////////////////
////////////////////////////////////////////////////////////////////

//***********************
// TYPOGRAPHY
//***********************
h1
  margin-top spacer-xl
  margin-bottom spacer-lg
  text-align center

h2, h4
  margin-bottom 0

//***********************
// CONTAINER
//***********************

main
  max-width md
  margin 0 auto

//***********************
// LINKS
//***********************
nav ul li a
  color text-color-base
  text-decoration none

a.tag
  color meta-color
  &:hover
    text-decoration underline

//***********************
// MAIN NAV
//***********************
nav
  height 120px
  border-bottom 1px solid gray-20
nav ul
  list-style-type none
  padding-left 0

nav, nav ul
  display flex
  justify-content center
  align-items center

nav ul li a
  color text-color-base
  &:hover
    color text-color-base
    text-decoration none

nav ul li
  padding .5em 0
  margin 0 1em
  text-transform uppercase
  font-weight 700
  letter-spacing 1px
  border-bottom 4px solid background-color-base
  &:hover
    border-bottom 4px solid primary
    transition border-bottom .4s .1s

nav ul li.active
  border-bottom 4px solid primary

nav img
  margin 0 1em
  width 80px

//***********************
// FOOTER
//***********************
#footer
 padding 2rem
 text-align center
 a
   text-decoration none
   color text-color-base

//***********************
//  HOME
//***********************
main.index
  display flex
  flex-wrap wrap
  align-items flex-end
  img
    height 380px
  section
    max-width 500px
    margin-right 15px
    p:last-child
      margin-bottom 0

//***********************
// ABOUT
//***********************
main.about
  max-width sm

//***********************
// BLOG
//***********************
main.blog
  max-width md
  text-align center
  h1
    margin-bottom 3rem
  p
    margin-bottom 0
    color meta-color
  time
    color text-color-base
  article
    background-color: white
    border-radius: 6px
    box-shadow: 0 1px 4px rgba(0, 0, 0, .2)
    margin-bottom: 2rem
  header
    padding 1rem 1rem 0
  .card-content
    padding 0 1rem 1rem

main.article
  max-width sm

article h1
  font-size 2em
  text-align center
  margin 2em 0 .25em

p.subtitle
  text-align center
  font-size .9em
  color meta-color
  margin-bottom 2rem

//***********************
// RESSOURCES
//***********************



main.ressources
  max-width md

.ressources h2, .ressources h2~p
  text-align center

//***********************
// CV
//***********************

.cv-bg
  background-color gray-10
  padding-bottom 5rem
main.cv
  h1
    margin-top 0
    padding-top 3rem
  header
    text-align center
    margin 1rem 0 2rem
  h3
    font-size h4-font-size
    margin-bottom 0
  section p:first-of-type
    color meta-color
    margin-bottom .5rem
  section
    margin-bottom 2rem
article.formation
  text-align center
